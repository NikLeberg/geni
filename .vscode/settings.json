{
    // show snippets at the top of intellisense suggestions
    "editor.snippetSuggestions": "top",
    // don't auto accept suggestions with enter, tab is used instead
    "editor.acceptSuggestionOnEnter": "off",
    // show ruler after 80 characters
    "editor.rulers": [
        80
    ],
    // format code automatically
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    // settings for vhdl formatter
    "vhdl.formatter.align.port": true,
    "vhdl.formatter.align.generic": true,
    "vhdl.formatter.align.procedure": true,
    "vhdl.formatter.insertFinalNewline": true,
    // treat .do files like tcl scripts
    "files.associations": {
        "*.do": "tcl"
    },
    // setup a default terminal that launches modelsim in scripting mode
    "terminal.integrated.profiles.windows": {
        "ModelSim": {
            "path": "vsim",
            "args": [
                "-c",
                "-do"
            ],
            "icon": "terminal-cmd"
        }
    },
    "terminal.integrated.defaultProfile.windows": "ModelSim"
}